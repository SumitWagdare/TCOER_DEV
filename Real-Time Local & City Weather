<body>
  <div class="card">
    <h1>ðŸŒ¤ Weather App</h1>
    <input type="text" id="cityInput" placeholder="Enter city...">
    <button onclick="getCityWeather()">Search</button>
    <p id="status">Fetching location...</p>
    <div id="weather"></div>
  </div>

  <footer>
    Â© All rights reserved by <b>Sumit | TCOER Dev</b>
  </footer>

  <script>
    const status = document.getElementById("status");
    const weatherDiv = document.getElementById("weather");

    // Fetch weather by coordinates
    function getWeather(lat, lon) {
      const apiKey = "YOUR_OPENWEATHERMAP_API_KEY"; // Replace with your key
      const url = `https://api.openweathermap.org/data/2.5/weather?lat=${lat}&lon=${lon}&units=metric&appid=${apiKey}`;

      fetchWeather(url);
    }

    // Fetch weather by city
    function getCityWeather() {
      const city = document.getElementById("cityInput").value;
      if (!city) return;
      const apiKey = "YOUR_OPENWEATHERMAP_API_KEY"; // Replace with your key
      const url = `https://api.openweathermap.org/data/2.5/weather?q=${city}&units=metric&appid=${apiKey}`;

      fetchWeather(url);
    }

    // Fetch weather data
    function fetchWeather(url) {
      status.textContent = "Loading...";
      weatherDiv.innerHTML = "";

      fetch(url)
        .then(response => response.json())
        .then(data => {
          if (data.cod === "404") {
            status.textContent = "City not found.";
            return;
          }

          status.textContent = data.name;
          weatherDiv.innerHTML = `
            <p>${data.weather[0].description.toUpperCase()}</p>
            <p class="temp">${Math.round(data.main.temp)}Â°C</p>
            <p>ðŸ’§ Humidity: ${data.main.humidity}%</p>
            <p>ðŸŒ¬ Wind: ${data.wind.speed} m/s</p>
          `;
        })
        .catch(() => {
          status.textContent = "Unable to fetch weather.";
        });
    }

    // Auto detect location
    function geoSuccess(position) {
      getWeather(position.coords.latitude, position.coords.longitude);
    }

    function geoError() {
      status.textContent = "Unable to retrieve your location. Try search.";
    }

    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(geoSuccess, geoError);
    } else {
      status.textContent = "Geolocation not supported.";
    }
  </script>
</body>
